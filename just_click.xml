<Module>
  <ModulePrefs title="Just Click! Gadget" title_url="http://www.exoplatform.com" directory_title="Gadget" 
  description="Just Click! gadget">
    <Require feature="views"/>
    <Require feature="dynamic-height" />
    <Require feature="opensocial-0.8"/>
    <Require feature="setprefs"/>
    <Require feature="settitle"/>
    
  </ModulePrefs>
  <Content type="html" view="home">
    <![CDATA[ 
    <link rel="stylesheet" type="text/css" href="./style/base.css"></link>
    
    <script type="text/javascript" src="./script/jquery-1.4.2.min.js"></script>
    <script type="text/javascript" src="./script/hypertree.js"></script>
    <script type="text/javascript" src="./script/data.js"></script>
    <script type="text/javascript" src="./script/jit.js"></script>
    
    <script type="text/javascript">
      gadgets.util.registerOnLoadHandler(request);
    </script>
    
    <div id="container">
      <div id="center-container">
        <div id="infovis"></div>
      </div>
    </div>
    
    ]]>
  </Content>
  
  <Content type="html" view="canvas">
    <![CDATA[ 
    <link rel="stylesheet" type="text/css" href="./style/base.css"></link>
    
    <script type="text/javascript" src="./script/jquery-1.4.2.min.js"></script>
    <script type="text/javascript" src="./script/hypertree.js"></script>
    <script type="text/javascript" src="./script/data.js"></script>
    <script type="text/javascript" src="./script/jit.js"></script>
    
    <script type="text/javascript">
      gadgets.util.registerOnLoadHandler(request);
    </script>
    
    <div id="container" style="height:600px; width:900px;">
      <div id="center-container" style="height:600px; width:900px">
        <div id="infovis" style="height:600px; width:900px"></div>    
      </div>
    </div>
    
    <div id="right-container">
      <div id="inner-details"></div>
    </div>
    
    ]]>
  </Content>
</Module>